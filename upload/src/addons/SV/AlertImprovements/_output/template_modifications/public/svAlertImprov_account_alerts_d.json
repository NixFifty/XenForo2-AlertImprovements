{
    "template": "account_alerts",
    "description": "Wrap alerts listing with form to update alert read/view states",
    "execution_order": 6396,
    "enabled": true,
    "action": "preg_replace",
    "find": "#(^<div class=\"block(?:.*?)?\".*?)(<div class=\"block-body.*?>.*?<\\/xf:if>.*?<\\/div>)(.*?<xf:pagenav.*?^<\\/div>$)#sim",
    "replace": "<xf:form action=\"{{ link('account/bulk-update-alerts') }}\" ajax=\"true\" data-force-flash-message=\"true\">\n$1$2\n\t<xf:if is=\"$alerts is not empty\">\n\t\t<div class=\"block-footer block-footer--split\">\n\t\t\t<span class=\"block-footer-counter\"></span>\n\t\t\t<span class=\"block-footer-select\"><xf:checkbox standalone=\"true\"><xf:option check-all=\"< .block-container\" label=\"{{ phrase('select_all') }}\" /></xf:checkbox></span>\n\t\t\t<span class=\"block-footer-controls\">\n\t\t\t\t<xf:hiddenval name=\"show_only\">{$navParams.show_only}</xf:hiddenval>\n\t\t\t\t<xf:hiddenval name=\"skip_mark_read\">1</xf:hiddenval>\n\t\t\t\t<xf:hiddenval name=\"skip_summarize\">1</xf:hiddenval>\n\t\t\t\t<xf:hiddenval name=\"page\">{$page}}</xf:hiddenval>\n\t\t\t\t<xf:select name=\"state\" class=\"input--inline\">\n\t\t\t\t\t<xf:option>{{ phrase('with_selected...') }}</xf:option>\n\t\t\t\t\t<!--[XF:action_menu:top]-->\n\t\t\t\t\t<xf:option value=\"read\">{{ phrase('svAlertImprov_mark_read') }}</xf:option>\n\t\t\t\t\t<xf:option value=\"unread\">{{ phrase('svAlertImprov_mark_unread') }}</xf:option>\n\t\t\t\t\t<!--[XF:action_menu:bottom]-->\n\t\t\t\t</xf:select>\n\t\t\t\t<xf:button type=\"submit\">{{ phrase('go') }}</xf:button>\n\t\t\t</span>\n\t\t</div>\n\t</xf:if>$3\n</xf:form>"
}